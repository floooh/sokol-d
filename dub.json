{
    "name": "sokol-d",
    "description": "Autogenerated D bindings for the sokol-headers",
    "version": "0.1.0",
    "copyright": "zlib",
    "authors": ["Matheus Catarino Fran√ßa"],
    "targetType": "sourceLibrary",
    "sourcePaths": ["src"],
    "buildTypes": {
      "debug": {
        "buildOptions": ["debugMode", "debugInfo", "optimize"],
        "dflags": ["-g"],
        "lflags": ["-L$PACKAGE_DIR/sokol/lib"],
        "libs": ["sokol"]
      },
      "release": {
        "buildOptions": ["releaseMode", "optimize", "inline"],
        "dflags": ["--release", "-boundscheck=on"],
        "lflags": ["-L$PACKAGE_DIR/sokol/lib"],
        "libs": ["sokol"]
      }
    },
    "configurations": [
        {
          "name": "unittest",
          "targetPath": "tests",
          "sourceFiles": ["src/examples/math.d"], 
          "dflags": ["-unittest"]
        }
    ]    
}